<!-- ======= Gallery Section ======= -->
<section id="gallery" class="gallery section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Gallery</h2>
            <p>A picture is worth a thousand words. Explore the property's interior and exteriour and get a first impression
                of the beautiful iceland of Samothrace.
            </p>
        </div>

        <div class="row" data-aos="fade-up">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="gallery-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    @foreach (var gallery in galleries ?? [])
                    {
                        <li data-filter=".filter-@gallery.DataFilterName">@gallery.Name</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row gallery-container" data-aos="fade-up" data-aos-delay="100">

            @foreach (var gallery in galleries ?? [])
            {
                foreach(var photo in gallery.Photos ?? [])
                {
                    if (photo.IsInvisible)
                    {
                        continue;
                    }
                    
                    <div class="col-lg-4 col-md-6 gallery-item filter-@gallery.DataFilterName">
                        <div class="gallery-wrap">
                            <img src="img/gallery/@photo.FileNameSquare" class="img-fluid" alt="">
                            <div class="gallery-links">
                                <a href="img/gallery/@photo.FileName" data-gallery="galleryGallery" class="gallery-lightbox" title="@photo.Description (#@photo.Id)"><i class="bx bx-plus"></i></a>
                            </div>
                        </div>
                    </div>
                }
            }
            

    </div>

</section><!-- End Gallery Section -->


