<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Eric Jansen">
    <meta name="robots" content="follow, index" />
    <meta name="title" content="Villa Monte Kariotes">
    <meta name="description" content="Discover Villa Monte Kariotes - Your tranquil retreat on the Greek island of Samothrace. This recently refurbished vacation home offers spacious living areas, fully equipped kitchens, and cozy bedrooms, accommodating up to eight guests. Enjoy panoramic views of lush gardens, azure seas, and majestic mountains from our charming terraces. With private swimming pools and idyllic gardens, your getaway awaits at Villa Monte Kariotes.">

    <!-- Open Graph tags-->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Villa Monte Kariotes" />
    <meta property="og:site_name" content="villamontekariotes.gr" />
    <meta property="og:description" content="Discover your next vacation home at the beautiful Greek iceland of Samothrace. Book now, it's popular!" />
    <meta property="og:url" content="https://villamontekariotes.gr" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content="https://cdn.villamontekariotes.gr/img/villa-monte-kariotes-og_image_01.jpg" />

    <!-- Title -->
    <title>Villa Monte kariotes</title>

    <!-- Google Tag Manager -->
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-TKQ9JXRW');</script>
    <!-- End Google Tag Manager -->
    <!-- Favicons -->
    <link href="~/favicon.ico" rel="icon">
    <link href="~/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="~/assets/vendors/aos/aos.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/boostrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/glightbox/glightbox.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Main CSS file-->
    <link href="~/css/villa-monte-kariotes.min.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TKQ9JXRW" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>


    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <div class="profile mt-4">
                <img src="~/img/villa-monte-kariotes-logo.svg" title="Villa Monte Kariotes" width="255px" />
                <div class="social-links text-center">
                    <div class="d-flex justify-content-center g-0">
                        <a href="https://www.booking.com/hotel/gr/villa-monte-kariotes.nl.html" title="See us on Booking.com" target="_blank"><img src="~/img/booking-logo.svg" class="img-fluid booking" width="100" /> </a>
                        <a href="https://www.facebook.com/villamontekariotes" title="Follow us on Facebook" target="_blank"><img src="~/img/facebook-logo.svg" class="img-fluid facebook" width="70" /></a>
                    </div>
                </div>
            </div>

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a href="~/#hero" class="nav-link scrollto active"><i class="bx bx-home" title="Home"></i> <span>Home</span></a></li>
                    <li><a href="~/#about" class="nav-link scrollto"><i class="bx bx-location-plus" title="About"></i> <span>About</span></a></li>
                    <li><a href="~/#accomodations" class="nav-link scrollto"><i class="bx bx-building-house" title="Accomodations"></i> <span>Accomodations</span></a></li>
                    <li><a href="~/#reservations" class="nav-link scrollto"><i class="bx bx-calendar-event" title="Reservations"></i> <span>Reservations</span></a></li>
                    <li><a href="~/#gallery" class="nav-link scrollto"><i class="bx bx-photo-album" title="Gallery"></i> <span>Gallery</span></a></li>
                    <li><a href="~/#testimonials" class="nav-link scrollto"><i class="bx bx-message-square-dots" title="Testimonials"></i> <span>Testimonials</span></a></li>
                    <li><a href="~/#faq" class="nav-link scrollto"><i class="bx bx-help-circle" title="Frequently asked questions"></i> <span>Frequently Asked Questions</span></a></li>
                    <li><a href="~/#contact" class="nav-link scrollto"><i class="bx bx-envelope" title="Contact"></i> <span>Contact</span></a></li>
                </ul>
            </nav>
        </div>
    </header>
    <!-- End Header -->
    <!-- GDPR Consent -->
    <partial name="_GdprConsent" />
    <!-- End GDPR Consent -->

    <main role="main" id="main">
        @RenderBody()
    </main>


    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                <p>
                    &copy; @DateTime.UtcNow.Year.ToString() <span>Villa Monte Kariotes</span><br />
                    <a href="~/privacy" title="Privacy Policy">Privacy Policy</a>
                </p>
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/igallery-bootstrap-gallery-websites-template/ -->
                <!-- Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a> -->
            </div>
        </div>
    </footer>
    <!-- End  Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS files -->
    <script src="~/assets/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/vendors/aos/aos.min.js"></script>
    <script src="~/assets/vendors/boostrap/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendors/glightbox/glightbox.min.js"></script>
    <script src="~/assets/vendors/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendors/waypoints/noframework.waypoints.js"></script>
    <script src="~/assets/vendors/jbvalidator/jbvalidator.min.js"></script>
    <script src="~/assets/vendors/js-cookie/js.cookie.min.js"></script>

    <!-- Main JS File -->
    <script src="~/js/villa-monte-kariotes.js" asp-append-version="true"></script>

</body>

</html>