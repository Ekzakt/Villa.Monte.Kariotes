<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Villa Monte kariotes</title>

    <!-- Favicons -->
    <link href="~/favicon.ico" rel="icon">
    <link href="~/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendors/aos/aos.css" rel="stylesheet" />
    <link href="~/assets/vendors/boostrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/glightbox/glightbox.min.css" rel="stylesheet" />
    <link href="~/assets/vendors/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Main CSS file-->
    <link href="~/css/villa-monte-kariotes.css" rel="stylesheet" asp-append-version="true" />

</head>
<body>

    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <div class="profile mt-4">
                <img src="~/img/villa-monte-kariotes-logo.svg" class="img-fluid" />
                <div class="social-links text-center">
                    <div class="d-flex justify-content-center g-0">
                        <a href="https://www.booking.com/hotel/gr/villa-monte-kariotes.nl.html" title="Follow us on Bookcom.com" target="_blank"><img src="~/img/booking-logo.svg" class="img-fluid booking" width="100" /> </a>
                        <a href="https://www.facebook.com/villamontekariotes" title="Follow us on Facbook" target="_blank"><img src="~/img/facebook-logo.svg" class="img-fluid facebook" width="70" /></a>
                    </div>
                </div>
            </div>

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a href="#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                    <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                    <li><a href="#accomodations" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Accomodations</span></a></li>
                    <li><a href="#reservations" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Reservations</span></a></li>
                    <li><a href="#gallery" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Gallery</span></a></li>
                    <li><a href="#your-stay" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Your stay</span></a></li>
                    <li><a href="#testimonials" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Testimonials</span></a></li>
                    <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
                </ul>
            </nav>
        </div>
    </header><!-- End Header -->


    <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
        <div class="hero-container m-4" data-aos="fade-in">
            <h1 class="display-1">Villa Monte Kariotes</h1>
            <p data-aos="fade-in">Your next vacation home</p>
        </div>
    </section><!-- End Hero -->


    <main role="main" id="main">
        @RenderBody()
    </main>


    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>iPortfolio</span></strong>
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/igallery-bootstrap-gallery-websites-template/ -->
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End  Footer -->
    
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS files -->
    <script src="~/assets/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/assets/vendors/aos/aos.js"></script>
    <script src="~/assets/vendors/boostrap/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendors/glightbox/glightbox.min.js"></script>
    <script src="~/assets/vendors/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendors/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendors/waypoints/noframework.waypoints.js"></script>

    <!-- Main JS File -->
    <script src="~/js/villa-monte-kariotes.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>